{
    "compilerOptions": {
      "experimentalDecorators": true,
      "resolveJsonModule": true,
      "target": "esnext",
      "module": "commonjs",
      "outDir": "dist",
      "rootDir": "src",
      "strict": true,
      "esModuleInterop": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "importsNotUsedAsValues": "error",
      "skipLibCheck": true,
      "declaration": true,
      "forceConsistentCasingInFileNames": true,
    },
    "exclude": ["node_modules", "tests", "dist"],
    "include": ["src"],
  }
  